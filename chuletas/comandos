*//**/*//*  Mysql console BD/*/**/*/*/*/

ingresando a mysql
	mysql -u root -proot
todas las base de datos
	show databases;
entrar a una base de datos
	use [baseDeDatos];
muestra las tablas de las bases de datos
	show tables;
muestra una tabla  especifica de una BD
	desc [nombreDeTabla];
cambiar de clave primaria
ALTER TABLE `[clavePrimaria]` DROP PRIMARY KEY, ADD PRIMARY KEY(`[nuevaClavePrimaria]`);
borra un campo de una tabla en BD
	ALTER TABLE `alumno` DROP `clave_alu`;
agrera un campo a una table
	ALTER TABLE `[nombrTbla]` ADD `[nombCampo]` [tipDato](#) NULL AFTER `[nombrTablaReferencia]`;
crear tabla
	CREATE TABLE `escuela`.`alumno_profesor` ( `[table]` INT(12) NULL ) ENGINE = InnoDB;



printenv=> para ver variables globales



cambiar permisos a ficheros modo recursivo
sudo chmod 755 $(find /home/stux/myCode -type d)


































